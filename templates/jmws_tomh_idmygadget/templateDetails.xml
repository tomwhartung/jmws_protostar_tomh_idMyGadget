<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>jmws_tomh_idmygadget</name>
	<version>1.0</version>
	<creationDate>6/20/2015</creationDate>
	<author>Kyle Ledbetter, Tom Hartung</author>
	<authorEmail>admin@joomla.org</authorEmail>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_TOMH_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
		<folder>jmws_idMyGadget_for_joomla</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jmws_tomh_idmygadget.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jmws_tomh_idmygadget.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="idmygadget">
				<field name="gadgetDetector"
					type="radio"
					class="btn-group"
					default="detect_mobile_browsers"
					label="TPL_PROTOSTAR_IDMYGADGET_DETECTOR_LABEL"
					description="TPL_PROTOSTAR_IDMYGADGET_DETECTOR_DESC"
				>
					<option value="detect_mobile_browsers">Detect Mobile Browsers</option>
					<option value="mobile_detect">Mobile Detect</option>
					<option value="tera_wurfl">Tera Wurfl</option>
				</field>

				<field name="logoFilePhone" class="" type="media" default=""
					label="TPL_PROTOSTAR_LOGO_FILE_PHONE_LABEL"
					description="TPL_PROTOSTAR_LOGO_FILE_PHONE_DESC" />

				<field name="sitetitlePhone"  type="text" default=""
					label="TPL_PROTOSTAR_SITETITLE_PHONE_LABEL"
					description="TPL_PROTOSTAR_SITETITLE_PHONE_DESC"
					filter="string" />

				<field name="sitedescriptionPhone"  type="text" default=""
					label="TPL_PROTOSTAR_SITEDESCRIPTION_PHONE_LABEL"
					description="TPL_PROTOSTAR_SITEDESCRIPTION_PHONE_DESC"
					filter="string" />

				<field name="showSiteNamePhone"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_LABEL"
					description="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="logoFileTablet" class="" type="media" default=""
					label="TPL_PROTOSTAR_LOGO_FILE_TABLET_LABEL"
					description="TPL_PROTOSTAR_LOGO_FILE_TABLET_DESC" />

				<field name="sitetitleTablet"  type="text" default=""
					label="TPL_PROTOSTAR_SITETITLE_TABLET_LABEL"
					description="TPL_PROTOSTAR_SITETITLE_TABLET_DESC"
					filter="string" />

				<field name="sitedescriptionTablet"  type="text" default=""
					label="TPL_PROTOSTAR_SITEDESCRIPTION_TABLET_LABEL"
					description="TPL_PROTOSTAR_SITEDESCRIPTION_TABLET_DESC"
					filter="string" />

				<field name="showSiteNameTablet"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_LABEL"
					description="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="logoFileDesktop" class="" type="media" default=""
					label="TPL_PROTOSTAR_LOGO_FILE_DESKTOP_LABEL"
					description="TPL_PROTOSTAR_LOGO_FILE_DESKTOP_DESC" />

				<field name="sitetitleDesktop"  type="text" default=""
					label="TPL_PROTOSTAR_SITETITLE_DESKTOP_LABEL"
					description="TPL_PROTOSTAR_SITETITLE_DESKTOP_DESC"
					filter="string" />

				<field name="sitedescriptionDesktop"  type="text" default=""
					label="TPL_PROTOSTAR_SITEDESCRIPTION_DESKTOP_LABEL"
					description="TPL_PROTOSTAR_SITEDESCRIPTION_DESKTOP_DESC"
					filter="string" />

					<field name="showSiteNameDesktop"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_LABEL"
					description="TPL_IDMYGADGET_SHOW_SITE_NAME_PHONE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_PROTOSTAR_COLOR_LABEL"
					description="TPL_PROTOSTAR_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_PROTOSTAR_BACKGROUND_COLOR_LABEL"
					description="TPL_PROTOSTAR_BACKGROUND_COLOR_DESC" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_PROTOSTAR_FONT_LABEL"
					description="TPL_PROTOSTAR_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_PROTOSTAR_FONT_NAME_LABEL"
					description="TPL_PROTOSTAR_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_PROTOSTAR_FLUID_LABEL"
					description="TPL_PROTOSTAR_FLUID_DESC"
				>
					<option value="1">TPL_PROTOSTAR_FLUID</option>
					<option value="0">TPL_PROTOSTAR_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
